@model CryptoApp.Domain.Models.Holding

@{
    ViewData["Title"] = "Edit Holding";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card mt-4">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Edit Holding</h2>
                    
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="PortfolioId" />
                        <input type="hidden" asp-for="PurchaseDate" />
                        <input type="hidden" asp-for="PurchasePrice" />
                        
                        <div class="mb-3">
                            <label asp-for="CryptocurrencyId" class="form-label">Cryptocurrency</label>
                            <select asp-for="CryptocurrencyId" class="form-select" required disabled>
                                @foreach (var crypto in ViewBag.Cryptocurrencies)
                                {
                                    <option value="@crypto.Id">@crypto.Name (@crypto.Symbol.ToUpper())</option>
                                }
                            </select>
                            <input type="hidden" asp-for="CryptocurrencyId" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Quantity" class="form-label">Quantity</label>
                            <input asp-for="Quantity" class="form-control" type="number" step="0.00000001" required />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                        
                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary w-100">Update Holding</button>
                            <a asp-controller="Portfolio" asp-action="Details" asp-route-id="@Model.PortfolioId" 
                               class="btn btn-outline-secondary w-100 mt-2">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
