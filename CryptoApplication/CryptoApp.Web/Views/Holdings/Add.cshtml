@model CryptoApp.Domain.Models.Holding

@{
    ViewData["Title"] = "Add Holding";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card mt-4">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Add New Holding</h2>
                    
                    <form asp-action="Add" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="PortfolioId" value="@ViewBag.PortfolioId" />
                        
                        <div class="mb-3">
                            <label asp-for="CryptocurrencyId" class="form-label">Cryptocurrency</label>
                            <select asp-for="CryptocurrencyId" class="form-select" required>
                                <option value="">Select a cryptocurrency</option>
                                @foreach (var crypto in ViewBag.Cryptocurrencies)
                                {
                                    <option value="@crypto.Id">@crypto.Name (@crypto.Symbol.ToUpper())</option>
                                }
                            </select>
                            <span asp-validation-for="CryptocurrencyId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Quantity" class="form-label">Quantity</label>
                            <input asp-for="Quantity" class="form-control" type="number" step="0.00000001" required />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Add Holding</button>
                            <a asp-controller="Portfolio" asp-action="Details" asp-route-id="@ViewBag.PortfolioId" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Add any client-side validation or enhancements here
        });
    </script>
}
