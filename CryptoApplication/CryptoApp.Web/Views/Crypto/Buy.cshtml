@model CryptoApp.Domain.Models.Cryptocurrency

@{
    ViewData["Title"] = $"Buy {Model.Name}";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">Buy @Model.Name (@Model.Symbol.ToUpper())</h2>
                    
                    <div class="alert alert-info mt-3">
                        Current Price: $<span id="currentPrice">@ViewBag.CurrentPrice.ToString("N2")</span>
                    </div>

                    <form asp-action="Buy" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <input type="hidden" name="portfolioId" value="@ViewBag.PortfolioId" />
                        
                        <div class="form-group mb-3">
                            <label for="quantity" class="form-label">Quantity</label>
                            <input type="number" class="form-control" id="quantity" name="quantity" 
                                   step="0.00000001" min="0" required 
                                   onchange="updateTotalValue()">
                        </div>
                        
                        <div class="form-group mb-3">
                            <label for="price" class="form-label">Price per @Model.Symbol.ToUpper()</label>
                            <input type="number" class="form-control" id="price" name="price" 
                                   step="0.01" value="@ViewBag.CurrentPrice" required 
                                   onchange="updateTotalValue()">
                        </div>

                        <div class="alert alert-secondary">
                            Total Value: $<span id="totalValue">0.00</span>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Complete Purchase</button>
                            <a asp-controller="Portfolio" asp-action="Details" 
                               asp-route-id="@ViewBag.PortfolioId" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function updateTotalValue() {
            const quantity = parseFloat(document.getElementById('quantity').value) || 0;
            const price = parseFloat(document.getElementById('price').value) || 0;
            const total = quantity * price;
            document.getElementById('totalValue').textContent = total.toFixed(2);
        }

        // Update current price every 30 seconds
        setInterval(function() {
            $.get('@Url.Action("GetPrice", new { symbol = Model.Symbol })', function(data) {
                $('#currentPrice').text(data.price.toFixed(2));
                $('#price').val(data.price);
                updateTotalValue();
            });
        }, 30000);
    </script>
}
