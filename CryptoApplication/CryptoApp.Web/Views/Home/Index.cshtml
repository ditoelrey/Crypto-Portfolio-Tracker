@model IEnumerable<CryptoApp.Domain.Models.Cryptocurrency>
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    <div class="text-center mb-5">
        <h1 class="display-4">Crypto Portfolio Tracker</h1>
        <p class="lead">Track your cryptocurrency investments in real-time</p>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Live Cryptocurrency Prices</h5>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Symbol</th>
                                    <th>Name</th>
                                    <th>Price</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var crypto in Model.Take(5))
                                {
                                    <tr>
                                        <td>@crypto.Symbol.ToUpper()</td>
                                        <td>@crypto.Name</td>
                                        <td>$@crypto.CurrentPrice.ToString("N2")</td>
                                        <td>
                                            <a asp-controller="Crypto" asp-action="Details" 
                                               asp-route-id="@crypto.Id" class="btn btn-sm btn-info">Details</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="mt-3">
                        <a asp-controller="Crypto" asp-action="Index" class="btn btn-primary">View All Cryptocurrencies</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Your Portfolio</h5>
                    <p class="card-text">Manage your cryptocurrency portfolio to track your investments.</p>
                    <div class="d-grid gap-2">
                        <a asp-controller="Portfolio" asp-action="Index" class="btn btn-primary">View Your Portfolio</a>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Features</h5>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="feature-item">
                                <h6>ðŸ’¹ Real-Time Tracking</h6>
                                <p>Monitor cryptocurrency prices in real-time with automatic updates.</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="feature-item">
                                <h6>ðŸ“Š Portfolio Management</h6>
                                <p>Create and manage multiple cryptocurrency portfolios.</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="feature-item">
                                <h6>ðŸ“ˆ Transaction History</h6>
                                <p>Keep track of all your buy and sell transactions.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Refresh cryptocurrency prices every 30 seconds
        setInterval(function() {
            location.reload();
        }, 30000);
    </script>
}
